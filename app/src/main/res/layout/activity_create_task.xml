<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".StudentActivity.CreateTask">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20sp">

        <LinearLayout
            android:id="@+id/linear_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/createback"
                    android:layout_width="25sp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/back"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/createback"
                    android:text="ADD TASK"
                    android:textColor="@color/accent_black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <EditText
                android:id="@+id/namearea"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/border_rounded"
                android:backgroundTint="@color/light_background"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:paddingStart="30dp"
                android:paddingTop="16dp"
                android:text="Task Name "
                android:textColor="@color/text_dark_white"
                android:textStyle="bold"
                android:visibility="visible"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlSymmetry" />

            <EditText
                android:id="@+id/textarea"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/edit_text_rounded"
                android:backgroundTint="@color/light_background"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:paddingStart="24dp"
                android:paddingTop="20dp"
                android:text="Description "
                android:textColor="@color/text_dark_white"
                android:textStyle="bold"
                android:visibility="visible"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlSymmetry" />

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                tools:ignore="UselessLeaf">

                <!--                <EditText-->
                <!--                    android:id="@+id/et"-->
                <!--                    android:layout_width="30dp"-->
                <!--                    android:layout_height="25dp"-->
                <!--                    android:layout_marginStart="10dp"-->
                <!--                    android:background="@drawable/text_view_round"-->
                <!--                    tools:ignore="Autofill,LabelFor,TextFields" />-->

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:onClick="onCheckboxClicked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20sp"
                    android:layout_toEndOf="@id/checkbox"
                    android:text="All Day"
                    android:textColor="@color/accent_black"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <TextView
                android:id="@+id/border"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/gray"
                android:padding="4dp"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                tools:ignore="UselessLeaf">

                <ImageView
                    android:id="@+id/et1"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/task_calendar"
                    tools:ignore="Autofill,ContentDescription,LabelFor,TextFields" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20sp"
                    android:layout_toEndOf="@id/et1"
                    android:text="Tue 9 July 2020, 9:30 PM"
                    android:textColor="@color/accent_black"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <TextView
                android:id="@+id/border1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/gray"
                android:padding="4dp"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                tools:ignore="UselessLeaf">

                <Button
                    android:id="@+id/et2"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/accent_green"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="Autofill,LabelFor,TextFields" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20sp"
                    android:layout_toEndOf="@id/et2"
                    android:text="Colour"
                    android:textColor="@color/accent_black"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/submit_task"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_below="@id/linear_task"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/border_rounded"
            android:backgroundTint="@color/accent_pink"
            android:fontFamily="@font/opensans_regular"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="SAVE"
            android:textColor="@color/light_background"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>