<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/download_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/background"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/linear_body"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/circular_image"
            android:layout_width="470dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:scaleType="fitCenter"
            android:src="@drawable/live1"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/relative_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/head_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="SUBJECT"
                android:textColor="@color/accent_black"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SmallSp" />

            <ProgressBar
                android:id="@+id/progressbar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="35dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="30"
                android:progressDrawable="@drawable/curved_progress_bar"
                android:scaleY="3"
                android:theme="@style/AppTheme"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/download_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/head_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="0.3"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="start"
                    android:text="Downloaded"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:ignore="HardcodedText,SmallSp" />

                <TextView
                    android:id="@+id/head_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="0.3"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="end"
                    android:text="Remove Download"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="HardcodedText,SmallSp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>