<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subject_body"
    android:layout_width="180dp"
    android:layout_height="108.0dip"
    android:layout_marginStart="5.0dip"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10.5dp"
    android:layout_marginBottom="7dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:backgroundTint="@color/light_background"
    app:cardCornerRadius="4.0dip"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <ImageView
        android:id="@+id/img"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/doc_page" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/opensans_regular"
            android:text="SUBJECT"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="2 Document"
            android:textColor="@color/accent_pink"
            android:textSize="13sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText,SmallSp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>