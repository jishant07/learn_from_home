<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo2" />

                <ImageView
                    android:id="@+id/home_task"
                    android:layout_width="45dp"
                    android:layout_height="34dp"
                    android:layout_toStartOf="@id/notification"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/newtask" />

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_toStartOf="@id/profileimg"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/newnotifications" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileimg"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/live1"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="3dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/background"
                    android:orientation="horizontal"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:id="@+id/assignment_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.25"
                        android:background="@drawable/square_shape"
                        android:backgroundTint="@color/light_background"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="5dp"
                        tools:ignore="InefficientWeight">

                        <ImageView
                            android:id="@+id/pager_img"
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/assignment"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/pager_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center"
                            android:lines="2"
                            android:text="ASSIGNMENT"
                            android:textColor="@color/accent_black"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/exam_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="0.25"
                        android:background="@drawable/square_shape"
                        android:backgroundTint="@color/light_background"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="5dp"
                        tools:ignore="InefficientWeight">

                        <ImageView
                            android:id="@+id/pager_img1"
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/exams"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/pager_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center"
                            android:lines="2"
                            android:text="EXAMS"
                            android:textColor="@color/accent_black"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/timetable_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.25"
                        android:background="@drawable/square_shape"
                        android:backgroundTint="@color/light_background"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="5dp"
                        tools:ignore="InefficientWeight">

                        <ImageView
                            android:id="@+id/pager_img2"
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/timetable"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/pager_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center"
                            android:lines="2"
                            android:text="TIME TABLE"
                            android:textColor="@color/accent_black"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/classroom_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.25"
                        android:background="@drawable/square_shape"
                        android:backgroundTint="@color/light_background"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="5dp"
                        tools:ignore="InefficientWeight">

                        <ImageView
                            android:id="@+id/pager_img3"
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:src="@drawable/classroom"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/pager_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center"
                            android:lines="2"
                            android:text="CLASSROOM"
                            android:textColor="@color/accent_black"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/continueheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/opensans_bold"
                android:text="CONTINUE WATCHING"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/products_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/liveheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/opensans_bold"
                android:text="LIVE SESSION"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:ignore="HardcodedText,SpUsage" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/live_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7.5dp"
                android:layout_marginEnd="10dp"
                android:scrollbars="vertical"
                android:visibility="gone" />

            <TextView
                android:id="@+id/sessionheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/opensans_bold"
                android:text="LATEST VIDEOS"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sessions_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/ebooks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/opensans_bold"
                android:text="BOOK"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ebooks_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:scrollbars="vertical" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>