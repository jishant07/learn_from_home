<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/swatch_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/live1" />

        <TextView
            android:id="@+id/swatch__item_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/swatch_profile"
            android:background="@drawable/square_shape"
            android:backgroundTint="@color/light_background"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/studentavatar"
            android:textColor="@color/accent_black"
            android:textSize="16sp"
            android:textStyle="normal" />

    </RelativeLayout>
</LinearLayout>