<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatimg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/student_watching" />

    <LinearLayout
        android:id="@+id/header_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2.5dp"
        android:layout_toEndOf="@id/chatimg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummydesc2"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chatheader1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/dummydesc2"
            android:textColor="@color/text_dark_white"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/number_msg"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_marginStart="100sp"
        android:layout_marginTop="12.5dp"
        android:layout_toEndOf="@id/header_body"
        android:background="@drawable/border_rounded"
        android:backgroundTint="@color/accent_green"
        android:text="2"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone"
        tools:ignore="HardcodedText" />
</RelativeLayout>