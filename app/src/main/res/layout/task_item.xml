    <RelativeLayout
        android:id="@+id/foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="4dp"
        android:visibility="visible"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/number"
            android:layout_width="3dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@color/accent_pink"
            android:padding="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_toEndOf="@id/number"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/head_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/gray_text"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:ignore="HardcodedText,SmallSp" />

            <TextView
                android:id="@+id/head_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SmallSp" />

            <TextView
                android:id="@+id/head_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:ignore="HardcodedText,SmallSp" />

            <RelativeLayout
                android:id="@+id/edit_task_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/edittask"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toStartOf="@id/deletetask"
                    android:background="@color/accent_pink"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/edit_task" />

                <ImageView
                    android:id="@+id/deletetask"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:background="@color/accent_pink"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/task_delete" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
